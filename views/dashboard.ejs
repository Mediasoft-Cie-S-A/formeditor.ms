                <!-- Tab Content -->
                <div class="tab-content">
                    <div id="formsList" class="tab-pane fade in active" style="min-height: 500px;">                      
                         
                        <div class="title-element">
                            <h2>Forms List</h2>
                        </div>
                        <ul class="form-list"></ul>
                        <script src="js/listForms.js"></script>
                             
                           
                        </div>

                    <div id="editForm" class="tab-pane fade">
                                                       
                                    <div id="formProperties" class="col" >
                                        <!-- Form properties will be added here -->
                                        <form id="formDataForm" class="container-fluid">
                                            <div class="row table-hover table-condensed editor-fields" style="display: flex; align-items: center; justify-content: center;">
                                            <div class="col" style="display: inline-block;">
                                                <label for="formId">Form ID:</label><br>
                                                <input class="input-element" type="text" id="formId" name="formId" placeholder="Form ID" value="" required><br>
                                            </div>
                                            
                                            <div class="col" style="display: inline-block;">
                                                <label for="formName">Form Name:</label><br>
                                                <input class="input-element" type="text" id="formName" name="formName" placeholder="Form Name" value="" required><br>
                                            </div>
                                        
                                            <div class="col" style="display: inline-block;">
                                                <label for="formPath">Form Path:</label><br>
                                                <input class="input-element" type="text" id="formPath" name="formPath" placeholder="Form Path" value="" required><br>
                                            </div>
                                     

                                            <div class="col" style="display: inline-block;">
                                                <label for="userCreated">User Created:</label><br>
                                                <input class="input-element" type="text" id="userCreated" name="userCreated" placeholder="User Created" value=" <%= name %> " required><br>
                                            </div>
                                        
                                            <div class="col" style="display: inline-block;">
                                                <label for="userModified">User Modified:</label><br>
                                                <input class="input-element" type="text" id="userModified" name="userModified" placeholder="User Modified" value=" <%= name %> " required><br>
                                            </div>
                                        
                                       
                                             <div class="col" style="display: inline-block;">
                                                <button class="button form-edit-button success" type="submit" ><i class="bi bi-check-lg"></i></button>
                                          </div>
                                            <div class="col" >
                                                <button class="button form-edit-button" type="button" onclick="document.getElementById('formContainer').innerHTML=''">Clear</button>
                                            </div>
                                        
                                            <div class="col" >
                                                <button  class="button form-edit-button" type="button" onclick="exportJson()">Export</button>
                                            </div>
                                        </div>
                                        </form>
                                        
                                 
                                
                                 </div>
                                <div class="row">
                            <!-- Sidebar -->
                              <table id="componentsList" class="table table-striped table-bordered table-hover table-condensed">
