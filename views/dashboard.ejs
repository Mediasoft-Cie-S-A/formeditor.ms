</head>
<body>
   <!-- As a link -->
<nav class="navbar d-flex title">    
      <img src="img/Logo_header.png" style="max-width: 200px"; />    
</nav>
    <div class="container body-content container-fluid">
        <div class="row">
           

            <!-- Main Content -->
            <div >
                <!-- Tab Navigation -->
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#formsList">.:Forms List:.</a></li>
                    <li><a data-toggle="tab" href="#editForm">.:Edit Form:.</a></li>
                    <li><a data-toggle="tab" href="#DatabaseForm">.:Database Form:.</a></li>
                    <li><a data-toggle="tab" href="#renderForm">.:Render Form:.</a></li>
                </ul>
                
                <!-- Tab Content -->
                <div class="tab-content">
                    <div id="formsList" class="tab-pane fade in active" style="min-height: 500px;">                      
                         
                            <h1>Forms List</h1>
                            
                                <ul id="formsList" class="form-list"></ul>

                                <script src="js/listForms.js"></script>
                           
                        </div>

                    <div id="editForm" class="tab-pane fade">
                            <div class="container">
                                <div class="row">
                                    <h2>Form Editor</h2>
                                    <div id="formProperties" class="col" >
                                        <!-- Form properties will be added here -->
                                        <form id="formDataForm" class="container-fluid">
                                            <div class="row table-bordered table-hover table-condensed" style="align-content: center; text-align: center;vertical-align: middle;">

                                            <div class="col" style="display: inline-block;">
                                                <label for="formId">Form ID:</label><br>
                                                <input type="text" id="formId" name="formId" placeholder="Form ID" value="" required><br>
                                            </div>
                                            
                                            <div class="col" style="display: inline-block;">
                                                <label for="formName">Form Name:</label><br>
                                                <input type="text" id="formName" name="formName" placeholder="Form Name" value="" required><br>
                                            </div>
                                        
                                            <div class="col" style="display: inline-block;">
                                                <label for="formPath">Form Path:</label><br>
                                                <input type="text" id="formPath" name="formPath" placeholder="Form Path" value="" required><br>
                                            </div>
                                     

                                            <div class="col" style="display: inline-block;">
                                                <label for="userCreated">User Created:</label><br>
                                                <input type="text" id="userCreated" name="userCreated" placeholder="User Created" value=" <%= name %> " required><br>
                                            </div>
                                        
                                            <div class="col" style="display: inline-block;">
                                                <label for="userModified">User Modified:</label><br>
                                                <input type="text" id="userModified" name="userModified" placeholder="User Modified" value=" <%= name %> " required><br>
                                            </div>
                                        
                                       
                                             <div class="col" style="display: inline-block;">
                                            <button type="submit" >Save</button>
                                        </div>
                                        <div class="col" style="display: inline-block;">
                                            <button type="button" onclick="document.getElementById('formContainer').innerHTML=''">Clear</button>
                                        </div>
                                        
                                        <div class="col" style="display: inline-block;">
                                            <button type="button" onclick="exportJson()">Export</button>
                                        </div>
                                        </form>
                                        
                                    </div>
                                
                                 </div>
                                <div class="row">
                            <!-- Sidebar -->
                              <table id="componentsList" class="table table-striped table-bordered table-hover table-condensed">
                                <tr>
                                <td style="width: 200px;">
                                <div id="componentsSidebar" >
                                
                                </div>
                            </td>
                            <td >
                                <div id="formContainer" ondrop="drop(event)" ondragover="allowDrop(event)">
                                    <!-- Form elements will be added here -->
                                </div>
                            </td>
                            <td  style="width: 200px;">
                                <div  id="propertiesBar" >.:Properties:. 
                                    <div >
                                        <!-- Edit -->
                                    </div>
                                </div>
                            </td>
                                </tr>
                              </table>
                            </div><!-- End of row -->
                            </div><!-- End of container -->
                             
                        </div>
                    </div>
                    <div id="DatabaseForm" class="tab-pane fade">
                        <!-- Rendered form will be displayed here -->
                        <div class="container-fluid">

                            <div class="row">
                                <h2>Database Structure</h2>
                                <button onclick="newTable()">Add Table</button>
                            </div>
                            <div class="row">
                      
                                <table id="componentsList" class="table">
                                    <tr>
                                    <td style="width: 200px; max-height: 2000px; overflow: auto;">
                                        <!-- Sidebar -->
                                        <div id="tableListBar" class="col table-bordered" >
                                        
                                        </div>
                                    </td>
                                    <td style="width: 100%;">
                                        <div id="mtableDetails" class="col"   >
                                    
                                        </div>

                                    </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="renderForm" class="tab-pane fade">
                        <!-- Rendered form will be displayed here -->
                    </div>
                </div>
            </div>
        </div>
    </div>


    
