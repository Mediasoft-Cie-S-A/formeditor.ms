                                <td  style="width: 120px;">
                                <div id="componentsSidebar" >
                                
                                </div>
                            </td>
                            <td  style="width: 100%;">
                                <div id="formContainer" ondrop="drop(event)" ondragover="allowDrop(event)">
                                    <!-- Form elements will be added here -->
                                </div>
                            </td>
                            <td  style="width: 200px;">
                                <div  id="propertiesBar" >
