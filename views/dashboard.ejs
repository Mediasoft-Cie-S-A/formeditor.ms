<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="" />
    <title>Form Editor</title>
    <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous"
    />
    <!-- Option 1: Include in HTML -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/hint/show-hint.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/lint/lint.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/lint/lint.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/lint/lint.min.css"
    />
    <!-- Load icon library -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <!-- font-awesome icons-->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <link rel="stylesheet" href="css/theme-indigo-light.css" />
    <link rel="stylesheet" href="css/style.css" />


    <!-- importing app scripts (load order is important) -->
    <script src="js/msjv2/authConfig.js"></script>
    <script src="js/msjv2/graphConfig.js"></script>

    <!-- <script type="text/javascript" src="./authRedirect.js"></script>   -->
    <!-- uncomment the above line and comment the line below if you would like to use the redirect flow -->
    <script src="js/msjv2/authPopup.js"></script>
    <script src="js/msjv2/authRedirect.js"></script>
    <script src="js/msjv2/graph.js"></script>
    <script src="js/msjv2/ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-yaml@4.1.0/dist/js-yaml.min.js"></script>
  </head>
  <body  ondrop="stopMoveEvent(event)">
    <!-- As a link -->
    <div class="main-header">
      <div class="row">
        <div
          class="col-md-12"
          style="display: flex; justify-content: space-between"
        >
          <div class="logo-element">
            <nav class="navbar d-flex title main-header-nav">
              <a href="#"><img src="media/img/Logo_header.png" alt="Logo" /></a>
            </nav>
          </div>
          <div class="account-element">
            <span><a href="#" onclick="showUserModal(event)">User</a></span>
            <span
              ><a href="#" onclick="showUserModal(event)"
                ><img
                  src="media/img/icon.png"
                  alt="User Icon"
                  style="width: 35px" /></a
            ></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div>
      <!-- Tab Navigation -->
      <ul class="nav nav-tabs">
        <li class="active">
          <a data-toggle="tab" href="#formsList">.:Forms List:.</a>
        </li>
        <li class="render-tab">
          <a data-toggle="tab" href="#renderForm">.:Render Form:.</a>
        </li>
        <li><a data-toggle="tab" href="#editForm">.:Edit Form:.</a></li>
        <li><a data-toggle="tab" href="#DatabaseForm">.:Database Form:.</a></li>
        <li><a data-toggle="tab" href="#WebServer">.:Web Server:.</a></li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content">
        <div
          id="formsList"
          class="tab-pane fade in active"
          style="min-height: 500px"
        >
          <div class="title-element">
            <h2>Forms List</h2>
          </div>
          <ul class="form-list"></ul>
          <script src="js/listForms.js"></script>
        </div>
        <div id="renderForm" class="tab-pane fade">
          <!-- Rendered form will be displayed here -->
           <div id="renderContainer" class="row" style="width: 100%; height: 100%; padding: 10px; ">
            </div>
        </div>
        <div id="editForm" class="tab-pane fade">
          <div id="formProperties" class="row display-flex" style="width: 100%; padding: 10px; ">
            <!-- Form properties will be added here -->
            <form id="formDataForm" class="container-fluid">
              <div
                class="row table-hover table-condensed editor-fields"
                style="
                  display: flex;
                  align-items: center;
                  justify-content: center;
                "
              >
                <div class="col" style="display: inline-block">
                  <label for="formId">ID:</label><br />
                  <input
                    class="input-element"
                    type="text"
                    id="formId"
                    name="formId"
                    placeholder="Form ID"
                    value=""
                    required
                  /><br />
                </div>

                <div class="col" style="display: inline-block">
                  <label for="formName">Name:</label><br />
                  <input
                    class="input-element"
                    type="text"
                    id="formName"
                    name="formName"
                    placeholder="Form Name"
                    value=""
                    required
                  /><br />
                </div>

                <div class="col" style="display: inline-block">
                  <label for="formPath">Path:</label><br />
                  <input
                    class="input-element"
                    type="text"
                    id="formPath"
                    name="formPath"
                    placeholder="Form Path"
                    value=""
                    required
                  /><br />
                </div>

                <div class="col" style="display: inline-block">
                  <label for="userCreated">User Created:</label><br />
                  <input
                    class="input-element"
                    type="text"
                    id="userCreated"
                    name="userCreated"
                    placeholder="User Created"
                    value=" <%= name %> "
                    required
                  /><br />
                </div>

                <div class="col" style="display: inline-block">
                  <label for="userModified">User Modified:</label><br />
                  <input
                    class="input-element"
                    type="text"
                    id="userModified"
                    name="userModified"
                    placeholder="User Modified"
                    value=" <%= name %> "
                    required
                  ><br />
                </div>

                <div class="col" style="display: inline-block">
                  <label for="type">Type:</label><br />
                  <select class="input-element" id="type" name="type" required>
                    
                    <option value="form">Form</option>
                    <option value="business_component">Business Component </option>
                  </select
                  ><br />
                </div>

                <div class="col" style="display: inline-block">
                  <button class="button form-edit-button success" type="submit">
                    <i class="bi bi-check-lg"></i>
                  </button>
                </div>
                <div class="col">
                  <button
                    class="button form-edit-button"
                    type="button"
                    onclick="showClearConfirmation()"
                  >
                    Clear
                  </button>                
                </div>
                <div class="col">
                  <button       
                  id="undoDeleteBtn"               
                    class="button form-edit-button"
                    type="button"
                    onclick="undoDelete()">Undo Delete</button>

                </div>

                <div class="col">
                  <button
                    class="button form-edit-button"
                    type="button"
                    onclick="exportJson()"
                  >
                    Export
                  </button>
                </div>
              </div>
            </form>
          </div>
          <div class="row display-flex" style="padding: 10px; margin: 5px;width: 100%;">
            <!-- Sidebar -->

                
                  <div id="componentsSidebar" class="col-md-1 col-sm-12 grid-element" style="background-color: white;" ></div>
                               
                  <div class="col-md-11 col-sm-12 grid-element" style="width: 100%;"
                    id="formContainer"
                    
                    ondrop="drop(event)"
                    ondragover="allowDrop(event)"
                  >
                    <!-- Form elements will be added here -->
                  </div>
               
              
                  <div id="editorPropertyInfos" class="col-md-2 col-sm-12 grid-element" style="overflow: auto;"  >
                          
                        <div id="propertiesBar" >
                          <div>
                            <!-- Edit -->
                          </div>
                        </div>
                  </div>
                  <div id="editorDataInfos" class="col-md-2 col-sm-12 grid-element" >
                  <div id="dataBar" style="padding: 10px; border-bottom: 2px solid silver;">
                  
                      <h5>Data</h5>
                   </div>
                  <div class="button-container" style="border-bottom: 2px solid #ccc; padding: 10px;">
                   
                    <button onclick="showDiv('webserviceDiv',this)" title="Web Server">
                        <i class="fa fa-server"></i>
                    </button>
                    <button onclick="showDiv('databaseDiv',this)" title="Database" style="box-shadow:inset 0 0 10px #000000 ">
                        <i class="fa fa-database"></i>
                    </button>
                </div>
               
                  <div id="webserviceDiv" class="tab-div" style="display: none;">
                    <div>
                      <input
                        type="text"
                        placeholder="filter.. API"
                        name="searchApi"
                        onchange="searchApi(this.value,'dragDropApiList')"
                      >
                    </div>
                    <div id="dragDropApiList" style="overflow: auto"></div>
                    <!-- Web Server will be listed here -->
                  </div>
              
                  <div id="databaseDiv" class="tab-div" >
                    <div>
                      <input
                        type="text"
                        placeholder="filter.. table"
                        name="searchtable"
                        onchange="searchtable(this.value,'drageDroptablesList')"
                      >
                    </div>
                    <div id="drageDroptablesList" style="overflow: auto"></div>
                    <!-- Tables will be listed here -->
                  </div>
                </div>
              </div>
          </div>

        <div id="DatabaseForm" class="tab-pane fade">
          <!-- Rendered form will be displayed here -->
          <div class="container-fluid">
            <div class="row">
              <div class="title-element">
                <h2>Database Structure</h2>
              </div>
              <button
                class="button database-header-button"
                onclick="newTable()"
              >
                Add Table
              </button>
            </div>
            <div class="row">
              <table id="componentsList_database" class="table">
                <tr>
                  <td style="width: 200px; max-height: 2000px; overflow: auto">
                    <!-- Sidebar -->
                    <div id="tableListBar" class="col table-bordered" style="width: 115px;">
                      <!-- Tables will be listed here -->
                      <div>
                        <input
                          type="text"
                          placeholder="filter.. table"
                          name="searchtable"
                          onchange="searchtable(this.value,'ContentTableListBar')"
                        >
                      </div>
                      <div
                        id="ContentTableListBar"
                        style="overflow: auto"
                      ></div>
                    </div>
                  </td>
                  <td style="width: 100%">
                    <div id="mtableDetails" class="col"></div>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div id="WebServer" class="tab-pane fade">
          <!-- Rendered form will be displayed here -->
          <div class="container-fluid">
            <div class="row">
              <div class="title-element">
                <h2>Web Server</h2>
              </div>
              <div>
                <div style="display: inline-block; margin: 10px">
                  <input
                    class="input-element"
                    type="link"
                    id="apiUrlLink"
                    name="apiUrlLink"
                    placeholder="API URL"
                    value=""
                    required
                  ><br />

                  <input
                    style="display: inline-block"
                    type="file"
                    id="fileInput"
                    name="fileInput"
                    accept=".yaml,.yml,.json"
                  >
                </div>
              </div>
              <button
                class="button database-header-button"
                onclick="loadWebServer()"
              >
                Load Web Server
              </button>
              <div id="web-api-container"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      id="editorFloatMenu"
      class="gjs-toolbar"
      style="pointer-events: all; top: 200px; left: 545.438px"
    >
      <input type="hidden" id="editorElementSelected" value="" >
      <div class="gjs-toolbar-items">
        <div class="gjs-toolbar-item" onclick="setParent()" title="select parent">
          <i class="bi bi-arrow-up"></i>
        </div>
        <div class="gjs-no-touch-actions gjs-toolbar-item" onclick="moveElement()" draggable="true" ondrag="moveElementEvent=true"  title="Move Element">  
          <i class="bi bi-arrows-move"></i>
        </div>
        <div class="gjs-toolbar-item" onclick="showProperties()" title="Show Properties">
          <i class="bi bi-gear"></i>
        </div>
        <div class="gjs-toolbar-item" onclick="showHTMLCodeEditor()" title="Show HTML Editor">
          <i class="bi bi-code-slash"></i>
        </div>
        <div class="gjs-toolbar-item" onclick="copyHTMLElement()" title="Copy Component"> 
          <i class="bi bi-clipboard"></i>
        </div>
        <div class="gjs-toolbar-item" onclick="pasteHTMLElement()" title="Paste Component">
          <i class="bi bi-clipboard-plus"></i>
        </div>
        <div class="gjs-toolbar-item" onclick="deleteElement()"  title="Delete Element">
          <i class="bi bi-trash"></i>
        </div>
	<div class="gjs-toolbar-item" onclick="EditorUndo()" title="Undo">
          <i class="bi bi-arrow-counterclockwise"></i>
      </div>
       <div class="gjs-toolbar-item" onclick="EditorRedo()" title="Redo">
          <i class="bi bi-arrow-clockwise"></i>
        </div>      </div>
    </div>
    <modal id="DatabaseDetailsModal" class="modal">
      <div class="modal-content" style="padding: 10px">
        <h6>Tables:</h6>
        <button class="close" onclick="closeDBModalEdit(this)">X</button>
        <button class="close" onclick="applyDBModal(this)">Apply</button>
          
        <div id="TablesListContent" style="display: flex;">
          <div  class="tab-div" style="width: 10%;" >
            <div>
              <input
                type="text"
                placeholder="filter.. table"
                name="searchtable"
                onchange="searchtable(this.value,'modalTableListPanel')"
              >
            </div>
            <div id="modalTableListPanel" style="overflow: auto"></div>
            <!-- Tables will be listed here -->
          </div>
          <div id="modaltableDetails" style="width: 90%;"></div>

        </div>
      </div> 
    </modal>

    <div id="toast-container"></div>
    <div id="hint-container"></div>

    <dialog id="jsCodeDialog">
      <div>JSCODE Editor</div>
      <div style="border: 1px solid black">
        <textarea
          id="jsCodeEditor"
          name="jsCodeEditor"
          style="width: 100%; height: 100%"
        ></textarea>
      </div>
      <button class="button" onclick="executejsCodeCode()">Run Code</button>
      <button class="button" onclick="savejsCodeCode()">Save Code</button>
      <button class="button" onclick="hidejsCodeEditor()">Close Editor</button>
    </dialog>
    <dialog id="HTMLCodeDialog">
      <div>HTML & JS Editor</div>
      <div style="border: 1px solid black">
        <textarea
          id="HTMLCodeEditorArea"
          name="HTMLCodeEditorArea"
          style="width: 100%; height: 100%"
        ></textarea>
      </div>
      <button class="button" onclick="saveHTMLCode()">Save Code</button>
      <button class="button" onclick="document.getElementById('HTMLCodeDialog').style.display='none';">Close Editor</button>
    </dialog>
  
    <div id="userModal">
      <div class="row">
        <div class="col-md-12">
          <div class="user-main">
            <button onclick="signOut()">Logout</button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <footer class="fixed-bottom mt-auto">
      <!-- Grid container -->
      <div class="container p-4 pb-0">
        <!-- Section: Social media -->
        <section class="mb-4">
          <!-- Github -->
          <a
            class="btn btn-outline-light btn-floating m-1"
            href="#!"
            role="button"
            ><i class="fab fa-github"></i
          ></a>
        </section>
        <!-- Section: Social media -->
      </div>
      <!-- Grid container -->

      <!-- Copyright -->
      <div class="text-center p-3">
        <a class="text-white" href="https://www.mediasoft-group.com//"
          >Mediasoft Group</a
        >
      </div>
      <!-- Copyright -->
    </footer>
    <!-- Footer -->

    <div onclick="closeModalEdit()" class="overlay" id="overlayModal"></div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-chart-treemap"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/codemirror.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.63.1/mode/javascript/javascript.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/meta.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/hint/javascript-hint.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/hint/show-hint.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/lint/javascript-lint.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/mode/htmlmixed/htmlmixed.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/6.65.7/addon/edit/closebrackets.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>

    <script src="/js/components/qrcode.js"></script>
    <script src="https://unpkg.com/html5-qrcode"></script>

    <script src="js/db.js"></script>
    <script src="js/loadComponents.js"></script>
    <script src="js/Components/userComponent.js"></script>
    <script src="js/editor.js"></script>
    <script src="js/dom.js"></script>
    <script src="js/formSubmit.js"></script>
    <script src="js/businessComponentSubmit.js"></script>
    <script src="js/webserver.js"></script>
    <script src="js/constant/index.js"></script>
    <script src="js/listBusinessComponent.js"></script>
    <script src="js/ui/clearConfirmation.js"></script>

    <div id="confirmClearModal" class="modal-overlay" style="display: none;">
      <div class="modal-box">
        <p>Are you sure you want to clear the form?</p>
        <div class="modal-actions">
          <button id="confirmClearYes">Yes</button>
          <button id="confirmClearCancel">Cancel</button>
        </div>
      </div>
    </div>
  </body>

  

</html>
