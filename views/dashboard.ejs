            </div>
        </div>
    </div>

    <div id="toast-container"></div>
    

    <dialog id="tableDetailsModal">
        <div style="align-content: center;width: 100%;"><h3 style="align-content: center;">Database Strcuture</h3> </div>
        <div>
            <div id="tablesList">
                <!-- Tables will be listed here -->
            </div>
            <div id="tableDetails">
                <!-- Table details will be shown here -->
            </div>
        </div>
        
            <button id="_insertTable" onclick="insertTable()">Insert</button>
            <button id="_insertGrid" onclick="insertGrid()">Grid</button>
            <button id="_insertSearch" onclick="insertSearch()">Search</button>
            <button onclick="closeModalDbStrct()">Close</button>
        
    </dialog>

<dialog id="jsCodeDialog" >
    <div>JSCODE Editor</div>   
    <div style="border: 1px solid black;">
   <textarea id="jsCodeEditor" name="jsCodeEditor" style="width: 100%; height: 100%"></textarea>
    </div>
    <button onclick="executejsCodeCode()">Run Code</button>
    <button onclick="savejsCodeCode()">Save Code</button>
    <button onclick="hidejsCodeEditor()">Close Editor</button>
</dialog>
