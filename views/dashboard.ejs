                                    <td style="width: 200px; max-height: 2000px; overflow: auto;">
                                        <!-- Sidebar -->
                                        <div id="tableListBar" class="col table-bordered" >
                                            <!-- Tables will be listed here -->
                                            <div  >
                                                <input type="text" placeholder="filter.. table" name="searchtable" onchange="searchtable(this.value,'ContentTableListBar')">
                                                
                                            </div>
                                            <div id="ContentTableListBar" style="overflow: auto;" ></div>
                                        </div>
                                    </td>
                                    <td style="width: 100%;">
                                        <div id="mtableDetails" class="col"   >
                                    
                                        </div>

                                    </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div id="renderForm" class="tab-pane fade">
                        <!-- Rendered form will be displayed here -->
                    </div>
                </div>
            </div>
      

    
