   <div class="content">


      <div class="login">
         <span class="fas fa-sign-in-alt" aria-hidden="true"></span>
         <strong><img src="img/Logo_header.png" style="max-width: 200px" alt="logo" /></strong>
         <span>Connexion</span>
         <form action="/login" method="post" class="login-form">
            <fieldset>
               <div class="form">
                  <div class="form-row">
                     <span class="fas fa-user" aria-hidden="true"></span>
                     <label class="form-label" >Name</label>
                     <input type="text" name="username" class="form-text">
                  </div>
                  <div class="form-row">
                     <span class="fas fa-eye" aria-hidden="true"></span>

                     <label class="form-label" >Password</label>
                         <input type="password" name="password" class="form-text">
                     </div>
                     <div class="form-row bottom">
                         <!-- <div class="form-check">
                             <input type="checkbox" id="remenber" name="remenber" value="remenber">
                             <label for="remenber"> remember me?</label>
                         </div> -->
                         <a href="#url" class="forgot">Forgot password?</a>
                     </div>
                     <div class="form-row button-login" style="display: inline-block;">
                         <button class="button button-login">Login <span class="fas fa-arrow-right" aria-hidden="true"></span></button>
                         <button onclick="signIn()"> Login Azure AD</button> 
                        </div>
                 </div>
             </fieldset>
         </form>
     </div>
   </div>
                  
